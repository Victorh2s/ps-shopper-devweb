generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drivers {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  vehicle     String
  min_km_fee  Float
  min_trip_km Float
  Review      Reviews[]
  Rides       Rides[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt()
  deletedAt   DateTime?
}

model Reviews {
    id          Int       @id @default(autoincrement())
    rating  Int
    comment String
    driver Drivers @relation(fields: [driver_id], references: [id])
    driver_id Int
}

model Rides {
  id          Int       @id @default(autoincrement())
  user        Users      @relation(fields: [user_id], references: [customer_id])
  user_id     String
  origin      String
  destination String
  distance    Int
  duration    String
  value       Int
  driver      Drivers   @relation(fields: [driver_id], references: [id])
  driver_id   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt()
  deletedAt   DateTime?
}

model Users {
  customer_id String @id @unique
  rides  Rides[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt()
  deletedAt   DateTime?
}
